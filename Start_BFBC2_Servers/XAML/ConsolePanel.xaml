<UserControl x:Class="Start_BFBC2_Servers.XAML.ConsolePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Start_BFBC2_Servers.XAML"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <Label Content="/Console" Foreground="White" VerticalAlignment="Center" FontSize="24" Margin="10 0"/>
        </DockPanel>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="{x:Null}">
            <StackPanel x:Name="Elements" Margin="10">
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
    
    
</UserControl>
