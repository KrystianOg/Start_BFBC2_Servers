<UserControl x:Class="Start_BFBC2_Servers.XAML.ServerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Start_BFBC2_Servers.XAML"
             mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 4" Background="#33000000">

        <CheckBox x:Name="CB" VerticalAlignment="Center" Margin="5 0"/>

        <Label x:Name="ServerName" Content="ServerName" Foreground="White" Width="250"/>

        <Button Width="32" Cursor="Hand" Click="Delete_Server">
            <Image Source="/Images/minus32.png"/>
        </Button>
        <Ellipse x:Name="Online" Height="15" Width="15" Fill="Red" Margin="5 0"/>

        <Button Width="32" Cursor="Hand" Click="Run_Server">
            <Image Source="/Images/run_command.png"/>
        </Button>
        <Button Width="32" Cursor="Hand" Click="Restart_Server">
            <Image Source="/Images/restart.png"/>
        </Button>
        <Button Width="32" Cursor="Hand" Click="Close_Server">
            <Image Source="/Images/shut_down.png"/>
        </Button>
    </StackPanel>
</UserControl>
